		<mj-include path="./mjml-shared/section-remote-connect-iso.mjml" />

		<mj-section mj-class="pt0 pd10-10-10 bg-white br-light-bottom-lr">
			<mj-column>
				<mj-text mj-class="pt10 pd15-0-15 caption20 lh24">
					Documentation
				</mj-text>
				<mj-text mj-class="pd10-15 fn14-center color-grey-lt lh20">
					CentOS operating system: <a href="https://centos.org/docs" class="link-underline">https://centos.org/docs</a>
				</mj-text>
			</mj-column>
		</mj-section>
		<!-- // tipy a FAQ -->
		<!-- // content-->

		<!-- footer-->
		<mj-include path="./mjml-shared/footer-grey.mjml" />
		<!-- // footer-->

	</mj-body>
